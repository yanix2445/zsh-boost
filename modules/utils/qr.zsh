# ╠══════════════════════════════════════════════════════════════════════════════╣
# ║  Génère un QR code dans le terminal (texte, wifi, url...)                    ║
# ╚══════════════════════════════════════════════════════════════════════════════╝

qr() {
    if [ -z "$1" ]; then
        echo "❌ Usage: qr <texte|url>"
        return 1
    fi
    
    echo ""
    curl -s "qrenco.de/$1"
    echo ""
}
